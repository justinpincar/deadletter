body
  background: #F5F1E8 url(/images/bg.jpg) top center;
  font-family: 'Source Sans Pro', sans-serif;

.alert
  background: transparent;
  color: #000000;
  margin-top: 1em;
  padding: 10px;
  font-size: 18px;
  line-height: 32px;
  border-radius: 3px;
  overflow: hidden;
  &.alert-purple
    border: 1px solid rgb(103, 103, 180);
  &.alert-red
    border: 1px solid rgb(214, 45, 45);


.note-url
  display: block;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background-color: #eee;
  border: 1px solid black;
  padding: 6px;

#note-decrypted
  margin-left: auto;
  margin-right: auto;
  display: block;

.l-center
  text-align: center;

.l-left-margin-small
  margin-left: 20px;

.l-hidden
  display: none;

.header
  h1
    color: #265778;

.l-top-margin-medium
  margin-top: 40px;

.l-top-padding-large
  padding-top: 80px;

#header-logo
  width: 100px;

#header-nav
  background: none;
  li
    cursor: pointer;

  li a
    border: 1px solid transparent;

  .pure-menu-selected a
    color: #000;
    border: 1px solid rgb(158, 38, 214) !important;
    border-radius: 3px;

  li a:hover, .pure-menu li a:focus
    background: none;
    border: 1px solid black !important;
    border-radius: 3px;

.pure-form legend
  color: #999;

html, body
  margin: 0;
  padding: 0;
  height: 100%;

#container
  min-height:100%;
  position:relative;

#layout
  padding-bottom: 20px;

#footer
  text-align: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 20px;
  letter-spacing: normal;
  color: #aaa;
  font-weight: 300;
  border-top: 1px solid #cecece;
  padding-top: 10px;
  padding-bottom: 10px;
  line-height: 20px;

#cover {position: fixed; height: 100%; width: 100%; top:0; left: 0; background: #000; z-index:9999;}

